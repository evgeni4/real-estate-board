{% extends 'main/base.html.twig' %}

{% block title %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-mg-12">
                <div class="main-register-holder tabs-act main-static ">
                    <div class="main-register-wrapper fl-wrap">
                        <div class="main-register-header color-bg">
                            <div class="main-register-logo fl-wrap">
                                <img src="{{ asset('assets/images/white-logo.png') }}" alt="logo">
                            </div>
                            <div class="main-register-bg">
                                <div class="mrb_pin"></div>
                                <div class="mrb_pin mrb_pin2"></div>
                            </div>
                            <div class="mrb_dec"></div>
                            <div class="mrb_dec mrb_dec2"></div>
                        </div>
                        <div class="main-register">
                            <ul class="tabs-menu fl-wrap no-list-style">
                                <li class="current"><a href="#tab-1" mb-checked="1" data-tip=""><i class="fal fa-sign-in-alt"></i> {% trans %}sign.in.label{% endtrans %}</a></li>
                                <li><a href="#tab-2" mb-checked="1" data-tip=""><i class="fal fa-user-plus"></i> {% trans %}sign.up.label{% endtrans %}</a></li>
                            </ul>
                            <!--tabs -->
                            <div class="tabs-container">
                                <div class="tab">
                                    <!--tab -->
                                    <div id="tab-1" class="tab-content first-tab">
                                        <div class="custom-form">
                                            <form method="post" name="registerform">
                                                <label>Email * <span class="dec-icon"><i class="fal fa-user"></i></span></label>
                                                <input name="email" type="text" onclick="this.select()" value="">
                                                <div class="pass-input-wrap fl-wrap">
                                                    <label>Password  * <span class="dec-icon"><i class="fal fa-key"></i></span></label>
                                                    <input name="password" type="password" autocomplete="off" onclick="this.select()" value="">
                                                    <span class="eye"><i class="fal fa-eye"></i> </span>
                                                </div>
                                                <div class="lost_password">
                                                    <a href="listing3.html#" mb-checked="1" data-tip="">{% trans %}forgot.password.label{% endtrans %}</a>
                                                </div>
                                                <div class="filter-tags">
                                                    <input id="check-a3" type="checkbox" name="check">
                                                    <label for="check-a3">{% trans %}remember me.me.label{% endtrans %}</label>
                                                </div>
                                                <div class="clearfix"></div>
                                                <button type="submit" class="log_btn color-bg"> {% trans %}sign.in.label{% endtrans %} </button>
                                            </form>
                                        </div>
                                    </div>
                                    <!--tab end -->
                                    <!--tab -->
                                    <div class="tab">
                                        <div id="tab-2" class="tab-content">
                                            <div class="custom-form">
                                                <form method="post" name="registerform" class="main-register-form" id="main-register-form2">
                                                    <label>Full Name  * <span class="dec-icon"><i class="fal fa-user"></i></span></label>
                                                    <input name="name" type="text" onclick="this.select()" value="">
                                                    <label>Email Address  * <span class="dec-icon"><i class="fal fa-envelope"></i></span></label>
                                                    <input name="email" type="text" onclick="this.select()" value="">
                                                    <div class="pass-input-wrap fl-wrap">
                                                        <label>Password  * <span class="dec-icon"><i class="fal fa-key"></i></span></label>
                                                        <input name="password" type="password" autocomplete="off" onclick="this.select()" value="">
                                                        <span class="eye"><i class="fal fa-eye"></i> </span>
                                                    </div>
                                                    <div class="filter-tags ft-list">
                                                        <input id="check-a2" type="checkbox" name="check">
                                                        <label for="check-a2">{% trans %}agree.label{% endtrans %} <a href="listing3.html#" mb-checked="1" data-tip="">Privacy Policy</a> {% trans %}and.label{% endtrans %} <a href="listing3.html#" mb-checked="1" data-tip="">Terms and Conditions</a></label>
                                                    </div>
                                                    <div class="clearfix"></div>
                                                    <button type="submit" class="log_btn color-bg"> Register </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!--tab end -->
                                </div>
                                <!--tabs end -->
                                <div class="log-separator fl-wrap"><span>{% trans %}or.label{% endtrans %}</span></div>
                                <div class="soc-log fl-wrap">
                                    <p>{% trans %}facebook.login.help{% endtrans %}</p>
                                    <a href="" class="facebook-log"> Facebook</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
