{% extends 'main/base.html.twig' %}
{% block title_detailed %}{% endblock %}

{% block body %}
    <!-- content -->
    {% set locale = app.request.locale %}
    <div class="content">
        <div class="breadcrumbs fw-breadcrumbs top-smpar smpar fl-wrap">
            <div class="container">
                <div class="breadcrumbs-list">
                    {{ wo_render_breadcrumbs() }}
                </div>
                <div class="show-more-snopt smact"><i class="fal fa-ellipsis-v"></i></div>
                <div class="show-more-snopt-tooltip">
                    <a href="#sec15" class="custom-scroll-link"> <i class="fas fa-comment-alt"></i> Write a review</a>
                    <a href="#"> <i class="fas fa-exclamation-triangle"></i> Report </a>
                </div>
                <a class="print-btn tolt" href="javascript:window.print()" data-microtip-position="bottom"
                   data-tooltip="{% trans %}print.label{% endtrans %}"><i class="fas fa-print"></i></a>
                <a class="compare-top-btn tolt" data-microtip-position="bottom"
                   data-tooltip="{% trans %}compare.label{% endtrans %}" href="#"><i
                            class="fas fa-random"></i></a>
                <div class="like-btn"><i class="fas fa-heart"></i>{% trans %}save.label{% endtrans %}</div>
            </div>
        </div>
        <div class="gray-bg small-padding fl-wrap">
            <div class="container">
                <div class="row">
                    <!--  listing-single content -->
                    <div class="col-md-8">
                        <div class="list-single-main-wrapper fl-wrap">
                            <!--  scroll-nav-wrap -->
                            <div class="scroll-nav-wrap">
                                <nav class="scroll-nav scroll-init fixed-column_menu-init">
                                    <ul class="no-list-style">
                                        <li><a class="act-scrlink" href="l#sec1"><i class="fal fa-info"></i>
                                            </a><span>{% trans %}details.label{% endtrans %}</span></li>
                                        <li><a href="#sec2"><i
                                                        class="fal fa-stars"></i></a><span>{% trans %}features.label{% endtrans %}</span>
                                        </li>
                                        {% if property.roomWidgetStatus and property.propertyRoomsWidgets %}
                                        <li><a href="#sec3"><i
                                                        class="fal fa-bed"></i></a><span>{% trans %}rooms.label{% endtrans %}</span>
                                            {% endif %}
                                        </li>
                                        {% if property.videoPresentation and property.video %}
                                            <li><a href="#sec4"><i
                                                            class="fal fa-video"></i></a><span>{% trans %}video.label{% endtrans %}</span>
                                            </li>
                                        {% endif %}
                                        {% if property.googleMapStatus %}
                                        <li><a href="#sec5"><i
                                                        class="fal fa-map-pin"></i></a><span>{% trans %}location.label{% endtrans %}</span>
                                            {% endif %}
                                        </li>
                                        <li><a href="#sec6"><i
                                                        class="fal fa-comment-alt-lines"></i></a><span>{% trans %}reviews.label{% endtrans %}</span>
                                        </li>
                                    </ul>
                                    <div class="progress-indicator">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             viewBox="-1 -1 34 34">
                                            <circle cx="16" cy="16" r="15.9155"
                                                    class="progress-bar__background"/>
                                            <circle cx="16" cy="16" r="15.9155"
                                                    class="progress-bar__progress
                                                            js-progress-bar"/>
                                        </svg>
                                    </div>
                                </nav>
                            </div>
                            <!--  scroll-nav-wrap end-->
                            <!--  list-single-opt_header-->
                            <div class="list-single-opt_header fl-wrap">
                                <ul class="list-single-opt_header_cat">
                                    <li><a href="#" class="cat-opt color-bg">{{ property.types }}</a></li>
                                    <li><a href="#" class="cat-opt color-bg">{{ property.category }}</a></li>
                                </ul>
                                <div class="share-holder hid-share">
                                    <a href="#" class="share-btn showshare sfcs"> <i class="fas fa-share-alt"></i> Share
                                    </a>
                                    <div class="share-container  isShare"></div>
                                </div>
                            </div>
                            <!--  list-single-opt_header end -->
                            <!--  list-single-header-item-->
                            <div class="list-single-header-item  fl-wrap" id="sec1">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h1>{{ property.translate(locale).title }} <span class="verified-badge tolt"
                                                                                         data-microtip-position="bottom"
                                                                                         data-tooltip="{% trans %}verified.label{% endtrans %}"><i
                                                        class="fas fa-check"></i></span></h1>
                                        <div class="geodir-category-location fl-wrap">
                                            <a href="#"><i class="fas fa-map-marker-alt"></i> {{ property.address }}</a>
                                            {{ render(controller('App\\Controller\\Main\\ListingController::reviewsFromProperty',
                                                {
                                                    'property':property
                                                })) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <a class="host-avatar-wrap" target="_blank"
                                           href="{{ path('main_profile_show',{'uuid':property.agent.uuid}) }}">
                                            {% set avatars =  property.agent.userImages().getValues() %}
                                            <span> {{ property.agent.firstName }} {{ property.agent.lastName }}</span>
                                            {% if avatars|length %}
                                                {% set avatar = avatars[0] %}
                                                <img src="{{ asset('assets/images/avatar-'~property.agent.id~'/'~avatar.fileNameMiddle) }}"
                                                     alt="Image">

                                            {% else %}
                                                <i class="fas fa-user" style="font-size: 20px;"></i>
                                            {% endif %}
                                        </a>
                                    </div>
                                </div>
                                <div class="list-single-header-footer fl-wrap">
                                    <div class="list-single-header-price" data-propertyprise="50500">
                                        <strong>{% trans %}price.label{% endtrans %}:</strong>
                                        {{ render(controller('App\\Controller\\Main\\ListingController::convert',{
                                            'price': property.price,
                                            'code': app.request.defaultCurrencylocale
                                        })) }}
                                        {{ property.period? '/  '~ property.period:'' }}
                                    </div>
                                    <div class="list-single-header-date">
                                        <span>{% trans %}date.label{% endtrans %}:</span>{{ property.createdAt|date('d.m.Y') }}
                                    </div>
                                    <div class="list-single-stats">
                                        <ul class="no-list-style">
                                            <li><span class="viewed-counter">
                                                    <i class="fas fa-eye"></i>
                                                    {% trans %}viewed.label{% endtrans %} -  {{ property.viewed }}
                                                </span>
                                            </li>
                                            <li><span class="bookmark-counter"><i class="fas fa-heart"></i> Bookmark -  24 </span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="list-single-main-media fl-wrap">
                                <div class="single-slider-wrapper carousel-wrap fl-wrap">
                                    <div class="slider-for fl-wrap carousel lightgallery">
                                        {% set images =  property.propertyImages.getValues() %}
                                        {% if images|length %}
                                            {% for image in images %}
                                                <!--  slick-slide-item -->
                                                <div class="slick-slide-item">
                                                    <div class="box-item">
                                                        <a href="{{ asset('assets/images/properties/property-'~image.slug~'/'~image.imageLg) }}"
                                                           class="gal-link popup-image"><i
                                                                    class="fal fa-search"></i></a>
                                                        <img src="{{ asset('assets/images/properties/property-'~image.slug~'/'~image.imageLg) }}"
                                                             alt="Image Property">
                                                    </div>
                                                </div>
                                                <!--  slick-slide-item end -->
                                            {% endfor %}
                                        {% else %}
                                            <img src="{{ asset('assets/images/no_image/noImage.png') }}"
                                                 alt="Property image">
                                        {% endif %}
                                    </div>
                                    <div class="swiper-button-prev ssw-btn"><i class="fas fa-caret-left"></i></div>
                                    <div class="swiper-button-next ssw-btn"><i class="fas fa-caret-right"></i></div>
                                </div>
                                <div class="single-slider-wrapper fl-wrap">
                                    <div class="slider-nav fl-wrap">
                                        {% if images|length %}
                                            {% for image in images %}
                                                <div class="slick-slide-item">
                                                    <img src="{{ asset('assets/images/properties/property-'~image.slug~'/'~image.imageLg) }}"
                                                         alt="Property Image">
                                                </div>
                                            {% endfor %}
                                        {% else %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="list-single-facts fl-wrap">
                                <!-- inline-facts -->
                                <div class="inline-facts-wrap">
                                    <div class="inline-facts">
                                        <i class="fal fa-home-lg"></i>
                                        <h6>{% trans %}type.label{% endtrans %}</h6>
                                        <span>{{ property.types }}/ {{ property.category }}</span>
                                    </div>
                                </div>
                                <!-- inline-facts end -->
                                <!-- inline-facts  -->
                                {% if property.accommodation %}
                                    <div class="inline-facts-wrap">
                                        <div class="inline-facts">
                                            <i class="fal fa-users"></i>
                                            <h6>{% trans %}accommodation.label{% endtrans %}</h6>
                                            <span>{{ property.accommodation }} {% trans %}guest.label{% endtrans %}</span>
                                        </div>
                                    </div>
                                {% endif %}
                                <!-- inline-facts end -->
                                <!-- inline-facts -->
                                {% if  property.bedrooms %}
                                    <div class="inline-facts-wrap">
                                        <div class="inline-facts">
                                            <i class="fal fa-bed"></i>
                                            <h6>{% trans %}bedrooms.label{% endtrans %}</h6>
                                            <span>{{ property.bedrooms }} {% trans %}bedrooms.label{% endtrans %}</span>
                                        </div>
                                    </div>
                                {% endif %}

                                <!-- inline-facts end -->
                                <!-- inline-facts -->
                                {% if property.bathrooms  %}
                                    <div class="inline-facts-wrap">
                                        <div class="inline-facts">
                                            <i class="fal fa-bath"></i>
                                            <h6>{% trans %}bathrooms.label{% endtrans %}</h6>
                                            <span>{{ property.bathrooms }}</span>
                                        </div>
                                    </div>
                                {% endif %}
                                <!-- inline-facts end -->
                            </div>
                            <div class="list-single-main-container fl-wrap">
                                <!-- list-single-main-item -->
                                <div class="list-single-main-item fl-wrap">
                                    <div class="list-single-main-item-title">
                                        <h3>{% trans %}description.label{% endtrans %}</h3>
                                    </div>
                                    <div class="list-single-main-item_content fl-wrap">
                                        <p>
                                            {{ property.translate(locale).description }}
                                        </p>
                                    </div>
                                </div>
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                <div class="list-single-main-item fl-wrap" id="sec2">
                                    <div class="list-single-main-item-title">
                                        <h3>{% trans %}details.label{% endtrans %}</h3>
                                    </div>
                                    <div class="list-single-main-item_content fl-wrap">
                                        <div class="details-list">
                                            <ul>
                                                <li><span>Ref-â„–:</span>{{ property.referenceNumber }}</li>
                                                <li>
                                                    <span>{% trans %}categories.label{% endtrans %}:</span>{{ property.category }}
                                                </li>
                                                <li>
                                                    <span>{% trans %}type.label{% endtrans %}:</span>{{ property.types }}
                                                </li>
                                                <li><span>{% trans %}area.label{% endtrans %}:</span>{{ property.area }}
                                                    m2
                                                </li>
                                                {% if property.yardSize %}
                                                    <li>
                                                        <span>{% trans %}yard.size.label{% endtrans %}:</span>{{ property.yardSize }}
                                                        m2
                                                    </li>
                                                {% endif %}
                                                {% if property.garage %}
                                                    <li><span>{% trans %}garage.label{% endtrans %}:</span>
                                                        {{ property.garage }} ({% trans %}cars.label{% endtrans %})
                                                    </li>
                                                {% endif %}
                                                <li>
                                                    <span>{% trans %}bedrooms.label{% endtrans %}:</span>{{ property.bedrooms }}
                                                </li>
                                                <li>
                                                    <span>{% trans %}bathrooms.label{% endtrans %}:</span>{{ property.bathrooms }}
                                                </li>
                                                <li><span>{% trans %}price.label{% endtrans %}:</span>
                                                    {{ render(controller('App\\Controller\\Main\\ListingController::convert',{
                                                        'price': property.price,
                                                        'code': app.request.defaultCurrencylocale
                                                    })) }}
                                                    {{ property.period? '/  '~ property.period:'' }}
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <!-- list-single-main-item end -->
                                <!--   list-single-main-item -->
                                {% if property.roomWidgetStatus and property.propertyRoomsWidgets|length %}
                                    {% set rooms = property.propertyRoomsWidgets %}
                                    <div class="list-single-main-item fl-wrap" id="sec3">
                                        <div class="list-single-main-item-title fl-wrap">
                                            <h3>{% trans %}rooms.label{% endtrans %}</h3>
                                        </div>
                                        <!--   rooms-container -->
                                        <div class="rooms-container fl-wrap">
                                            {% for room in rooms %}
                                                {% if room.published %}
                                                    <!--  rooms-item -->
                                                    <div class="rooms-item fl-wrap">
                                                        <div class="rooms-media">
                                                            <img src="{{ asset('assets/images/properties/widgets/widget-'~room.slug~'/'~room.imageRoom) }}"
                                                                 alt="Room image">
                                                            <div class="dynamic-gal more-photos-button color-bg"
                                                                 data-dynamicPath="[{'src': '{{ asset('assets/images/properties/widgets/widget-'~room.slug~'/'~room.imageRoom) }}'}]">
                                                                <i class="fas fa-camera"></i>
                                                                <span>{% trans %}view.label{% endtrans %}</span>
                                                            </div>
                                                        </div>
                                                        <div class="rooms-details">
                                                            <div class="rooms-details-header fl-wrap">
                                                                {% if room.area %}
                                                                    <span class="rooms-area">{{ room.area }}<strong> /  m2</strong></span>
                                                                {% endif %}
                                                                <h3>{{ room.translate(locale).title }}</h3>
                                                                <h5>{% trans %}room.additional.label{% endtrans %}:
                                                                    <span>{{ room.translate(locale).room }}</span></h5>
                                                            </div>
                                                            <p>{{ room.translate(locale).details }}</p>
                                                            <div class="facilities-list fl-wrap">
                                                                {% set amenities = room.propertyRoomsWidgetAmenities().getValues() %}
                                                                <ul>
                                                                    {% if amenities|length %}
                                                                        {% for amenity in  amenities %}
                                                                            <li class="tolt"
                                                                                data-microtip-position="top"
                                                                                data-tooltip="{{ amenity.amenity.translate(locale).title }}">
                                                                                <i class="fal fa-{{ amenity.amenity.icon }}"></i>
                                                                            </li>
                                                                        {% endfor %}
                                                                    {% endif %}
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--  rooms-item end -->
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <!--   rooms-container end -->
                                    </div>
                                {% endif %}
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                {% if property.propertyPlans|length and property.propertyPlanStatus   %}
                                    {% set plans = property.propertyPlans %}
                                    <div class="list-single-main-item fl-wrap">
                                        <div class="list-single-main-item-title">
                                            <h3>{% trans %}plan.label{% endtrans %}</h3>
                                        </div>
                                        <div class="accordion">
                                            {% for key,plan in plans %}
                                                {% if plan.published %}
                                                    <a class="toggle {{ key == 0 ?'act-accordion': '' }}"
                                                       href="#"> {{ plan.translate(locale).title }}
                                                        <strong>{{ plan.area }} m2</strong> <span></span> </a>
                                                    <div class="accordion-inner {{ key == 0 ?'visible': '' }}">
                                                        <img src="{{ asset('assets/images/properties/plans/plan-'~plan.slug~'/'~plan.imagePlan) }}"
                                                             alt="Plan Image">
                                                        <p>{{ plan.translate(locale).details }}</p>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                {% if property.videoPresentation and property.video %}
                                    <div class="list-single-main-item fl-wrap" id="sec4">
                                        <div class="list-single-main-item-title">
                                            <h3>{% trans %}video.label{% endtrans %}</h3>
                                        </div>
                                        <div class="list-single-main-item_content fl-wrap">
                                            <div class="video-box fl-wrap">
                                                <iframe width="100%" height="350" src="https://www.youtube.com/embed/{{ property.video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                {% if property.propertyAmenities.getValues() %}
                                    <div class="list-single-main-item fl-wrap">
                                        <div class="list-single-main-item-title">
                                            <h3>{% trans %}amenities.label{% endtrans %}</h3>
                                        </div>
                                        <div class="list-single-main-item_content fl-wrap">
                                            <div class="listing-features ">
                                                <ul class="fl-wrap filter-tags no-list-style ds-tg">
                                                    {% set amenities = property.propertyAmenities.getValues() %}
                                                    {% for amenity in  amenities %}
                                                        {% if amenity.checked %}
                                                            <li>
                                                                {#                                                            <input type="checkbox" class="form-check-input" checked #}
                                                                {#                                                                   disabled> #}
                                                                {#                                                            <label>{{ amenity.amenity.translate(locale).title }}</label> #}
                                                                <a href="#">
                                                                    <i class="fal fa-{{ amenity.amenity.icon }}"></i>
                                                                    {{ amenity.amenity.translate(locale).title }}</a>
                                                            </li>
                                                        {% endif %}
                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                {% if property.googleMapStatus %}
                                    <div class="list-single-main-item fw-lmi fl-wrap" id="sec5">
                                        <div class="map-container mapC_vis mapC_vis2">
                                            <div id="singleMap" data-latitude="{{ property.latitude }}"
                                                 data-longitude="{{ property.longitude }}" data-mapTitle="Our Location"
                                                 data-infotitle="{{ property.translate(locale).title }}"
                                                 data-infotext="{{ property.address }}"></div>
                                            <div class="scrollContorl"></div>
                                        </div>
                                        <input id="pac-input" class="controls fl-wrap controls-mapwn" autocomplete="on"
                                               type="text" placeholder="{% trans %}what.up.label{% endtrans %} "
                                               value="">
                                    </div>
                                {% endif %}
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                <div class="list-single-main-item fl-wrap" id="sec6">
                                    {% set reviews = property.reviews.getValues %}
                                    <div class="list-single-main-item-title">
                                        <h3>{% trans %}reviews.label{% endtrans %}
                                            <span>{{ reviewsFromProperty?reviewsFromProperty['count']:0 }}</span></h3>
                                    </div>
                                    <div class="list-single-main-item_content fl-wrap">
                                        <div class="reviews-comments-wrap fl-wrap">
                                            <div class="review-total">
                                                <span class="review-number blue-bg">{{ reviewsFromProperty?reviewsFromProperty['stars-rating']:0 }}</span>
                                                <div class="listing-rating card-popup-rainingvis"
                                                     data-starrating2="{{ reviewsFromProperty?reviewsFromProperty['stars-rating']:0 }}">
                                                    <span class="re_stars-title">{{ reviewsFromProperty?reviewsFromProperty['stars-title']:'' }}</span>
                                                </div>
                                            </div>
                                            <!-- reviews-comments-item -->
                                            {% for review in reviews %}
                                                <div class="reviews-comments-item">
                                                    <div class="review-comments-avatar">
                                                        {% set author = review.author %}
                                                        {% set avatars =  author.userImages().getValues() %}
                                                        {% if avatars|length %}
                                                            {% set avatar = avatars[0] %}
                                                            <img src="{{ asset('assets/images/avatar-'~author.id~'/'~avatar.fileNameMiddle) }}"
                                                                 alt="">
                                                        {% else %}
                                                            <i class="fas fa-user"
                                                               style="font-size: 20px;"></i>
                                                        {% endif %}
                                                    </div>
                                                    <div class="reviews-comments-item-text smpar">

                                                        <h4>
                                                            <a href="{{ path('main_profile_show',{'uuid':author.uuid}) }}">{{ author.firstName?author.firstName|capitalize:review.name|capitalize }} {{ author.lastName|capitalize }}</a>
                                                        </h4>
                                                        {{ render(controller('App\\Controller\\Main\\AgentProfileController::reviewsFromAuthor',{
                                                            'uuid':author.uuid,
                                                            'reviews':review
                                                        })) }}
                                                        <div class="clearfix"></div>
                                                        <p>{{ review.text }}</p>
                                                        <div class="reviews-comments-item-date">
                                                            <span class="reviews-comments-item-date-item">
                                                                <i class="far fa-calendar-check"></i>{{ review.createdAt|date('d-m-Y') }}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                            <!--reviews-comments-item end-->
                                        </div>
                                    </div>
                                </div>
                                <!-- list-single-main-item end -->
                                <!-- list-single-main-item -->
                                <div class="list-single-main-item fl-wrap" id="sec15">
                                    {{ include('main/listing/_embed/single/form_comment/_form.html.twig') }}
                                </div>
                                <!-- list-single-main-item end -->
                            </div>
                        </div>
                    </div>
                    <!-- listing-single content end-->
                    <!-- sidebar -->
                    <div class="col-md-4">
                        <!--box-widget-->
                        <div class="box-widget fl-wrap">
                            <div class="profile-widget">
                                <div class="profile-widget-header color-bg smpar fl-wrap">
                                    <div class="pwh_bg"></div>
                                    <div class="profile-widget-card">
                                        {% set avatars =  property.agent.userImages().getValues() %}
                                        <div class="profile-widget-image">
                                            {% if avatars|length %}
                                                {% set avatar = avatars[0] %}
                                                <img src="{{ asset('assets/images/avatar-'~property.agent.id~'/'~avatar.fileNameMiddle) }}"
                                                     alt="Image">
                                            {% else %}
                                                <i class="fas fa-user" style="font-size: 20px;"></i>
                                            {% endif %}
                                        </div>
                                        <div class="profile-widget-header-title">
                                            <h4>
                                                <a href="{{ path('main_profile_show',{'uuid': property.agent.uuid}) }}">{{ property.agent.firstName }} {{ property.agent.lastName }}</a>
                                            </h4>
                                            <div class="clearfix"></div>
                                            <div class="pwh_counter">
                                                {% trans %}property.listing.label{% endtrans %} <span>{{ property.agent.properties|length }}</span>
                                            </div>
                                            <div class="clearfix"></div>
                                            {{ render(controller('App\\Controller\\Main\\AgentProfileController::reviewAgent',{
                                                'user':property.agent,
                                            })) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="profile-widget-content fl-wrap">
                                    <div class="contats-list fl-wrap">
                                        <ul class="no-list-style">
                                            <li><span><i class="fal fa-phone"></i> {% trans %}phone.label{% endtrans %} :</span>
                                                <a
                                                        href="#">{{ property.agent.phone }}</a></li>
                                            <li><span><i class="fal fa-envelope"></i> Email :</span> <a
                                                        href="#">{{ property.agent.email }}</a></li>
                                        </ul>
                                    </div>
                                    <div class="profile-widget-footer fl-wrap">
                                        <a href="{{ path('main_profile_show',{'uuid':property.agent.uuid}) }}"
                                           target="_blank"
                                           class="btn float-btn color-bg small-btn">{% trans %}view.profile.label{% endtrans %}</a>
                                        <a href="#sec-contact" class="custom-scroll-link tolt"
                                           data-microtip-position="left"
                                           data-tooltip="{% trans %}viewing.property.label{% endtrans %}"><i
                                                    class="fal fa-paper-plane"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--box-widget end -->
                        <!--box-widget-->
                        <div class="box-widget fl-wrap">
                            <div class="box-widget-title fl-wrap">{% trans %}featured.properties.label{% endtrans %}</div>
