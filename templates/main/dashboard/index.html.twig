        <div class="dashboard-stats-container fl-wrap">
            <div class="row">
                <!--dashboard-stats-->
                <div class="col-sm-4">
                    <div class="dashboard-stats fl-wrap">
                        <i class="fal fa-map-marked"></i>
                        <h4>{% trans %}active.listings.label{% endtrans %}</h4>
                        <div class="dashboard-stats-count">{{ properties?properties:0 }}</div>
                    </div>
                </div>
                <!-- dashboard-stats end -->
                <!--dashboard-stats-->
                <div class="col-sm-4">
                    <div class="dashboard-stats fl-wrap">
                        <i class="fal fa-chart-bar"></i>
                        <h4>{% trans %}listing.iews.label{% endtrans %}</h4>
                        <div class="dashboard-stats-count">{{ listingViews?listingViews:0 }}</div>
                    </div>
                </div>
                <!-- dashboard-stats end -->
                <!--dashboard-stats-->
                <div class="col-sm-4">
                    <div class="dashboard-stats fl-wrap">
                        <i class="fal fa-comments-alt"></i>
                        <h4>{% trans %}reviews.label{% endtrans %}</h4>
                        <div class="dashboard-stats-count">{{ reviews|length }}</div>
                    </div>
                </div>
                <!-- dashboard-stats end -->
                <!--dashboard-stats-->
                <!-- dashboard-stats end -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="dashboard-widget-title fl-wrap">{% trans %}your.statistic.label{% endtrans %}</div>
                <div class="dasboard-content fl-wrap">
                    <!-- chart-wra-->
                    <div class="chart-wrap   fl-wrap">
                        <canvas id="myChart" width="auto" height="auto"></canvas>
                    </div>
                    <!--chart-wrap end-->
                </div>
