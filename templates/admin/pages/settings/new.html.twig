{% extends 'admin/layout/layout_main.html.twig' %}
{% import "@A2lixTranslationForm/macros.html.twig" as a2lixTranslations %}
{% block title_detailed %}{% endblock %}
{% block body %}
    <style>
        .trashDel {
            position: relative;
        }

        .delete {
            position: absolute;
            right: 0;
            top: 0;
        }

        label {
            font-weight: bold;
        }

        .vich-image img {
            width: 150px;
        }
    </style>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="tabset">
                    <input type="radio" name="tabset" id="tab1" aria-controls="general" checked>
                    <label for="tab1">{% trans %}General{% endtrans %}</label>
                    <input type="radio" name="tabset" id="tab2" aria-controls="mail-smtp">
                    <label for="tab2">Mail SMTP</label>
                    <input type="radio" name="tabset" id="tab3" aria-controls="contact">
                    <label for="tab3">{% trans %}contact.label{% endtrans %}</label>
                    <input type="radio" name="tabset" id="tab4" aria-controls="terms">
                    <label for="tab4">{% trans %}privacy.policy.label{% endtrans %} /  {% trans %}terms.service.label{% endtrans %}</label>
                    <input type="radio" name="tabset" id="tab5" aria-controls="image">
                    <label for="tab5">{% trans %}Logo{% endtrans %}</label>
                    <div class="tab-panels">
                        <section id="general" class="tab-panel">
                            <h4>{% trans %}General{% endtrans %}</h4>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    {{ a2lixTranslations.partialTranslations(form.translations, ['siteName']) }}
                                    {{ a2lixTranslations.partialTranslations(form.translations, ['metaKeywords']) }}
                                    {{ a2lixTranslations.partialTranslations(form.translations, ['metaDescription']) }}
                                </div>
                                <div class="col-lg-3">
                                    {{ form_row(form.adsPerPage) }}
                                </div>
{#                                <div class="col-lg-6">#}
{#                                    <label for="dtpickerdemo" class= " control-label">Disabled site now</label>#}
{#                                        {{ form_row(form.date) }}#}
{#                                    </div>#}
{#                                </div>#}
                        </section>
                        <section id="mail-smtp" class="tab-panel">
                            <h4>Mail SMTP</h4>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <label for="">SMTP Hostname</label>
                                    {{ form_row(form.hostName) }}
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <label for="">SMTP Username</label>
                                    {{ form_row(form.userName) }}
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <label for="">SMTP Password</label>
                                    {{ form_row(form.password) }}
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <label for="">SMTP Port</label>
                                    {{ form_row(form.port) }}
                                </div>
                            </div>
                        </section>
                        <section id="contact" class="tab-panel">
                            <h4>{% trans %}contact.label{% endtrans %}</h4>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    {{ form_row(form.address) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.phone) }}
                                </div>
                                <div class="col-lg-6">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                        </section>
                        <section id="terms" class="tab-panel">
                            <h4>{% trans %}privacy.policy.label{% endtrans %} /  {% trans %}terms.service.label{% endtrans %}</h4>
                            <div class="row mb-4">
                                <div class="col-lg-12">
                                    {{ a2lixTranslations.partialTranslations(form.translations, ['privacyPolicy']) }}
                                    {{ a2lixTranslations.partialTranslations(form.translations, ['termsOfService']) }}
                                </div>
                            </div>
                        </section>
                        <section id="image" class="tab-panel">
                            <h4>{% trans %}Logo{% endtrans %}</h4>
                            <div class="row mb-4">
                                <div class="col-lg-6">
                                    <label for="">Logo</label>
                                    {{ form_row(form.logo) }}
                                </div>
                                <img style="width: 250px;"
                                     src="{{ asset('assets/images/logo-'~settings.logoPath~'/'~settings.logo) }}"
                                     alt="Logo">
                            </div>
                        </section>
                    </div>

                </div>
                <button type="submit" class="btn btn-primary">{% trans %}send.label{% endtrans %}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class='col-lg-9'>

            </div>

        </div>
    </div>

{% endblock %}



