<button type="button" class="btn header-item waves-effect"
        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <b>{{ app.request.locale|locale_name(app.request.locale)|capitalize}}</b>
</button>
<div class="dropdown-menu dropdown-menu-end">
    {% for locale in locales %}
        {% if locale!= app.request.locale %}
            <a href="{{ path('admin_change_language', {'locale': locale}) }}" class="dropdown-item notify-item language"  data-lang="{{ locale|upper }}"><span class="align-middle"><b>{{ locale|locale_name(locale)|capitalize }}</b></span></a>
        {% endif %}
    {% endfor %}

</div>