{% extends 'admin/layout/layout_empty_page.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="card-body pt-0">
                            <div class="mt-3 mb-3"><h1 class="h3 mb-3 font-weight-normal">{% trans %}sign.in.label{% endtrans %}</h1></div>
                            <div class="p-2">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <form method="post" >
                                    <div class="mb-3">
                                        <label for="inputEmail">Email</label>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"  autofocus>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputPassword">Password</label>
                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" >

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >
                                     </div>
                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> {% trans %}remember me.me.label{% endtrans %}
                                        </label>
                                    </div>
                                    <div class="text-end">
                                        <button class="btn btn-primary w-md waves-effect waves-light" type="submit">{% trans %}sign.in.label{% endtrans %}</button>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center">
                         <p>Â© {{ 'now'|date('Y') }}</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}